{
  "name": "@formio/bulma",
  "version": "2.0.0",
  "description": "Bulma UI templates for form.io forms.",
  "main": "lib/index.js",
  "scripts": {
    "test:coverage": "nyc --reporter=text mocha --reporter spec './{,!(node_modules)/**/}*.spec.js'",
    "test": "mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "watch": "tsc -w",
    "build": "tsc && gulp templates && webpack",
    "lint": "tslint -p .",
    "prepublish": "npm run build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "Bulma",
    "UI",
    "form.io",
    "forms"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/ejs": "^3.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.8",
    "@types/sinon": "^7.5.1",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-template": "^5.0.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^8.1.1",
    "ts-node": "^8.6.2",
    "ts-sinon": "^1.0.24",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formio/bulma.git"
  },
  "author": "randall@form.io",
  "license": "ISC"
}
